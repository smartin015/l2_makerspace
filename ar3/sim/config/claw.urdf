<robot name="2claw">
  <link name="base" />
  <link name="con1" />
  <link name="congear1" />
  <link name="con2" />
  <link name="congear2" />
  <link name="claw1" />
  <link name="claw2" />

  <joint name="joint1" type="revolute">
    <parent link="base"/>
    <child link="congear1"/>
  </joint>

  <joint name="joint2" type="revolute">
    <parent link="base"/>
    <child link="congear2"/>
    <mimic joint="joint1" multiplier="-1" offset="0"/>
  </joint>

  <joint name="joint1mimic" type="revolute">
    <parent link="base"/>
    <child link="con1"/>
    <mimic joint="joint1" multiplier="1" offset="0" />
  </joint>
  <joint name="joint2mimic" type="revolute">
    <parent link="base"/>
    <child link="con2"/>
    <mimic joint="joint2" multiplier="1" offset="0" />
  </joint>

  <joint name="joint3" type="revolute">
    <parent link="congear1"/>
    <child link="claw1"/>
    <mimic joint="joint1" multiplier="-1" offset="0" />
  </joint>

  <joint name="joint4" type="revolute">
    <parent link="congear2"/>
    <child link="claw2"/>
    <mimic joint="joint2" multplier="-1" offset="0" />
  </joint>
</robot>

